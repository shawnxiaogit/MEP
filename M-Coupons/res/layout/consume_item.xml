<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
     >
    
    <LinearLayout
        android:id="@+id/panel_cancle_cb"
        android:layout_width="wrap_content"
        android:layout_height="210.0dip"
        android:layout_alignParentLeft="true"
        android:gravity="center_vertical"
        android:layout_marginLeft="5.0dip"
        android:layout_marginRight="5.0dip"
        >
         	
        <Button
            android:id="@+id/btn_cancle"
            android:layout_width="50.0dip"
            android:layout_height="30.0dip"
            android:background="@drawable/login_btn_selector"
            android:text="@string/give_up"
            android:textColor="#ffffffff"
            android:textSize="18.0sp" />
		<!-- 
        <Button
            android:id="@id/btn_scan"
            android:layout_width="80.0dip"
            android:layout_height="50.0dip"
            android:background="@drawable/login_btn_selector"
            android:text="@string/scan_title"
            android:textColor="#ffffffff"
            android:textSize="18.0sp" />
             -->
    </LinearLayout>
    
    
    <LinearLayout 
        android:id="@+id/panel_consume_detail"
        android:layout_width="280.0dip"
        android:layout_height="210.0dip"
        android:orientation="vertical"
        android:layout_marginLeft="5.0dip"
        android:layout_marginRight="5.0dip"
        android:layout_toRightOf="@+id/panel_cancle_cb"
        android:gravity="center_vertical"
        >
        <RelativeLayout
                android:id="@+id/panel_deal_num"
                android:layout_width="fill_parent"
                android:layout_height="40.0dip"
                android:background="@drawable/public_line_top" >

                <TextView
                    android:id="@+id/tv_deal_cust_num"
                    style="@style/place_data_coll_tv_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5.0dip"
                    android:text="@string/deal_cust_num" />

                <TextView
                    android:id="@+id/tv_deal_cust_num_value"
                    style="@style/place_data_coll_et_client_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginRight="10.0dip"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/tv_deal_cust_num"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/panel_deal_cust_name"
                android:layout_width="fill_parent"
                android:layout_height="40.0dip"
                android:background="@drawable/public_line_mid" >

                <TextView
                    android:id="@+id/tv_deal_cust_name"
                    style="@style/place_data_coll_tv_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5.0dip"
                    android:text="@string/deal_cust_name" />

                <TextView
                    android:id="@+id/tv_deal_cust_name_value"
                    style="@style/place_data_coll_et_client_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginRight="10.0dip"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/tv_deal_cust_name"
                    />
            </RelativeLayout>
        <RelativeLayout
                android:id="@+id/panel_deal_date"
                android:layout_width="fill_parent"
                android:layout_height="40.0dip"
                android:background="@drawable/public_line_mid" >


                <TextView
                    android:id="@+id/tv_deal_date"
                    style="@style/place_data_coll_tv_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5.0dip"
                    android:text="@string/deal_date" />

                <TextView
                    android:id="@+id/tv_deal_date_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginRight="10.0dip"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/tv_deal_date"
                    style="@style/place_data_coll_et_client_style"
                    android:focusable="false"
                    />
            </RelativeLayout>
            
         	<RelativeLayout
                android:id="@+id/panel_deal_time"
                android:layout_width="fill_parent"
                android:layout_height="40.0dip"
                android:background="@drawable/public_line_mid" >

                <TextView
                    android:id="@+id/tv_deal_time"
                    style="@style/place_data_coll_tv_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5.0dip"
                    android:text="@string/deal_time" />

                <TextView
                    android:id="@+id/tv_deal_time_value"
                    style="@style/place_data_coll_et_client_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginRight="10.0dip"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/tv_deal_time"
                    />
            </RelativeLayout>
            
